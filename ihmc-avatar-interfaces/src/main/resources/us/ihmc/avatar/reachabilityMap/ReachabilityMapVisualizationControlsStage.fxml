<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.stage.Stage?>

<Stage fx:id="stage" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <AnchorPane>
            <children>
               <GridPane hgap="10.0" vgap="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" />
                     <ColumnConstraints hgrow="SOMETIMES" />
                     <ColumnConstraints hgrow="SOMETIMES" />
                     <ColumnConstraints hgrow="SOMETIMES" />
                     <ColumnConstraints hgrow="SOMETIMES" />
                     <ColumnConstraints hgrow="SOMETIMES" />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints vgrow="SOMETIMES" />
                     <RowConstraints vgrow="SOMETIMES" />
                     <RowConstraints vgrow="SOMETIMES" />
                     <RowConstraints vgrow="SOMETIMES" />
                  </rowConstraints>
                  <children>
                     <Label text="Visualization type:" />
                     <ComboBox fx:id="visualizationTypeComboBox" prefWidth="150.0" GridPane.columnIndex="1" />
                     <Label text="xMin:" GridPane.rowIndex="1" />
                     <Label text="xMax:" GridPane.rowIndex="2" />
                     <Label text="yMin:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                     <Label text="yMax:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                     <Label text="zMin:" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                     <Label text="zMax:" GridPane.columnIndex="4" GridPane.rowIndex="2" />
                     <Spinner prefWidth="125.0" GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="xMinSpinner" />
                     <Spinner prefWidth="125.0" GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="xMaxSpinner" />
                     <Spinner fx:id="yMinSpinner" prefWidth="125.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                     <Spinner fx:id="yMaxSpinner" prefWidth="125.0" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                     <Spinner fx:id="zMinSpinner" prefWidth="125.0" GridPane.columnIndex="5" GridPane.rowIndex="1" />
                     <Spinner fx:id="zMaxSpinner" prefWidth="125.0" GridPane.columnIndex="5" GridPane.rowIndex="2" />
                     <Button mnemonicParsing="false" onAction="#refreshVisualization" text="Generate Visualization" GridPane.columnIndex="5" GridPane.rowIndex="3" />
                  </children>
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
               </GridPane>
            </children></AnchorPane>
        </Scene>
    </scene>
</Stage>
