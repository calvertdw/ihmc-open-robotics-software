<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
	prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<fx:include fx:id="polygonizerMenuBar"
			source="PolygonizerMenuBar.fxml" />
	</top>
	<bottom>
		<TabPane prefHeight="150.0" prefWidth="600.0"
			tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
			<tabs>
				<Tab text="Display Options">
					<content>
						<AnchorPane prefHeight="200.0" prefWidth="200.0">
							<children>
								<fx:include fx:id="polygonizerDisplayOptionTab"
									source="PolygonizerDisplayOptionTab.fxml" />
							</children>
						</AnchorPane>
					</content>
				</Tab>
				<Tab text="Parameters">
					<content>
						<AnchorPane minHeight="0.0" minWidth="0.0"
							prefHeight="180.0" prefWidth="200.0">
							<children>
								<fx:include fx:id="polygonizerParametersTab"
									source="PolygonizerParametersTab.fxml" />
							</children>
						</AnchorPane>
					</content>
				</Tab>
			</tabs>
		</TabPane>
	</bottom>
</BorderPane>
