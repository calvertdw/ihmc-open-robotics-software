<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="152.0" prefWidth="713.0"
            xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="us.ihmc.footstepPlanning.ui.controllers.VisualizationController">
    <children>
        <GridPane hgap="10.0" layoutX="23.0" layoutY="24.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" onAction="#requestStatistics" text="Request Statistics" GridPane.rowIndex="1"/>
                <ToggleButton fx:id="showBodyPathToggleButton" mnemonicParsing="false" selected="true" text="Show body path" GridPane.rowIndex="2"/>

                <ToggleButton fx:id="showPlanarRegionsToggleButton" mnemonicParsing="false" selected="true" text="Show planar regions" GridPane.columnIndex="2"
                              GridPane.rowIndex="1"/>
                <ToggleButton fx:id="showClusterNavigableExtrusionsToggleButton" mnemonicParsing="false" text="Show navigable extrusions"
                              GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <ToggleButton fx:id="showClusterNonNavigableExtrusionsToggleButton" mnemonicParsing="false" text="Show non-navigable extrusions"
                              GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <ToggleButton fx:id="showClusterRawPointsToggleButton" mnemonicParsing="false" text="Show cluster raw points" GridPane.columnIndex="2"
                              GridPane.rowIndex="4"/>

                <ToggleButton fx:id="showGoalMapToggleButton" mnemonicParsing="false" text="Show goal map" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <ToggleButton fx:id="showStartMapToggleButton" mnemonicParsing="false" text="Show start map" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                <ToggleButton fx:id="showInterRegionMapToggleButton" mnemonicParsing="false" text="Show inter-region map" GridPane.columnIndex="3"
                              GridPane.rowIndex="3"/>
                <ToggleButton fx:id="showInnerRegionMapsToggleButton" mnemonicParsing="false" text="Show inner-region maps" GridPane.columnIndex="3"
                              GridPane.rowIndex="4"/>

                <ToggleButton fx:id="showOccupancyMap" mnemonicParsing="false" selected="true" text="Show occupancy map" GridPane.columnIndex="4"
                              GridPane.rowIndex="1"/>
                <ToggleButton fx:id="showSolution" mnemonicParsing="false" selected="true" text="Show solution" GridPane.columnIndex="4"
                              GridPane.rowIndex="2"/>
                <ToggleButton fx:id="showIntermediateSolution" mnemonicParsing="false" selected="true" text="Show intermediate plans" GridPane.columnIndex="4"
                              GridPane.rowIndex="3"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
